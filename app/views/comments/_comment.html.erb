<div class="card">
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= comment.body %></p>
      <footer class="blockquote-footer"><%= comment.commenter %></footer>
    </blockquote>
    <%= link_to 'Destroy comment', [comment.article, comment], class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
  </div>
</div>